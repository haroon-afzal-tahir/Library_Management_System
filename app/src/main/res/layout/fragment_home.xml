<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".HomeFragment"
	android:background="#2C2C2C"
	android:orientation="vertical">

	<com.google.android.material.card.MaterialCardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="#4CAF50"
		app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardView">
		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:layout_marginBottom="20dp"
			android:rowCount="3"
			android:columnCount="1">

			<GridLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:rowCount="1"
				android:columnCount="2"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp">
				<Button
					android:drawableLeft="@drawable/ic_menu"
					android:layout_height="wrap_content"
					android:layout_width="58dp"
					style="@style/Widget.AppCompat.Button.Borderless"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Maroon"
					android:textColor="#FFFFFF"
					android:textSize="18dp"
					android:textAlignment="center"
					android:layout_marginLeft="20dp"/>

			</GridLayout>

			<SearchView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_white_rounded"
				android:iconifiedByDefault="false"
				android:queryHint="Search here" />
		</GridLayout>
	</com.google.android.material.card.MaterialCardView>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		app:cardBackgroundColor="#878888"
		app:cardCornerRadius="10dp">
		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="20dp"
			android:rowCount="3"
			android:columnCount="1">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Browse Users"
				android:textColor="#FFFFFF"
				android:textSize="18dp"
				android:textFontWeight="700"/>

			<com.google.android.material.tabs.TabLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:tabMode="auto"
				android:background="#878888"
				app:tabTextColor="#C8C5C5"
				app:tabSelectedTextColor="#A2E3A5"
				app:tabIndicatorColor="#A2E3A5"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp">

				<com.google.android.material.tabs.TabItem
					android:id="@+id/AllUsers"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="All Users"
					/>

				<com.google.android.material.tabs.TabItem
					android:id="@+id/FineUsers"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Fine Users"
					/>

				<com.google.android.material.tabs.TabItem
					android:id="@+id/NonFineUsers"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Non-Fine Users"
					/>

			</com.google.android.material.tabs.TabLayout>

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/userView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
		</GridLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		app:cardBackgroundColor="#878888"
		app:cardCornerRadius="10dp">
		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="20dp"
			android:rowCount="3"
			android:columnCount="1">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Browse Librarians"
				android:textColor="#FFFFFF"
				android:textSize="18dp"
				android:textFontWeight="700"/>


			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/librariansView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"/>
		</GridLayout>
	</androidx.cardview.widget.CardView>


</LinearLayout>